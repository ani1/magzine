<p id="notice"><%= notice %></p>
<% if @article.present? %>
<div class="panel panel-default" style="margin-top:20px;">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @article.title %></h3>
  </div>
  <div class="panel-body">
    <%= @article.body %>
  </div>
   <div class="panel-footer">
    <strong>By:</strong>&nbsp;<em><%= @article.author %></em>
    <span class="pull-right">
      <%= link_to "Comment", new_comment_path(:article_id => @article.id), :remote => "true" %>
       | <%= link_to 'Edit', edit_article_path(@article)%>
    <span>

   </div>
</div>
    <div id="comments">
      <%= render "comments" unless @comments.empty? %>
    </div>
    <div class="col-lg-12">
      <div class="modal fade comment_modal" id="comment_modal" tabindex="-1" role="dialog" aria-labelledby="myLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title"><%= "#{@article.title}" %></h4>
            </div>
            <div class="modal-body">
              <div class="container-fluid">
                <div class="row" id="comment_form">
                  <%= render "comments/form" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
<% else %>
    <p><%= "Article Not Found" %></p>
<% end %>
<%= link_to 'Back', articles_path %>
